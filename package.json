{
  "name": "shikigami",
  "version": "0.1.0",
  "description": "AI agent orchestration for parallel development",
  "module": "src/cli/index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "shiki": "src/cli/index.ts"
  },
  "scripts": {
    "dev": "bun run src/cli/index.ts",
    "tui": "bun run src/cli/index.ts tui",
    "build": "bun build src/cli/index.ts --outdir dist --target bun",
    "build:standalone": "bun build src/cli/index.ts --compile --outfile dist/shiki",
    "build:linux-x64": "bun build src/cli/index.ts --compile --target=bun-linux-x64 --outfile dist/shiki-linux-x64",
    "build:darwin-arm64": "bun build src/cli/index.ts --compile --target=bun-darwin-arm64 --outfile dist/shiki-darwin-arm64",
    "build:darwin-x64": "bun build src/cli/index.ts --compile --target=bun-darwin-x64 --outfile dist/shiki-darwin-x64",
    "build:windows-x64": "bun build src/cli/index.ts --compile --target=bun-windows-x64 --outfile dist/shiki-windows-x64.exe",
    "build:all": "bun run build:linux-x64 && bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:windows-x64",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node-notifier": "^8.0.5",
    "@types/react": "^19.2.7"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "commander": "^14.0.2",
    "ink": "^6.6.0",
    "node-notifier": "^10.0.1",
    "react": "^19.2.3"
  }
}
